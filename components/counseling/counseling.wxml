<!--components/counseling/counseling.wxml-->
<!-- 倾听疏导 -->
<view class="container1">
  <view class="title">
    <text class="title1">倾听疏导</text>
    <text>{{test2.length}}</text>
  </view>
  <!-- 第一块区域 -->
  <view wx:for="{{ counselor1 }}" wx:key="id" wx:for-item="first">
  <navigator url="../counselor-dialog/counselor-dialog" class="area" >
    <view class="avatar-area">
      <image src="{{first.src}}" class="avatar" />
    </view>
    <view class="info-area">
      <view class="info-area1">
        <text class="name">{{first.name}}</text>
        <text class="duration">服务时长{{first.serviceTime}}小时</text>
      </view>
      <view class="intro">
        <text class="intro">{{first.introContent}}</text>
      </view>
      <view class="info-area1">
        <block wx:for="{{ first.tags }}" wx:key="id" wx:for-item="second">
          <text class="tags">{{ second.tag }}</text>
        </block>
      </view>
    </view>
  </navigator>
  </view>
    <!-- 第四块区域 -->
    <view class="getMore">
      <navigator url="../market/market">更多倾听者</navigator>
    </view>
</view>

