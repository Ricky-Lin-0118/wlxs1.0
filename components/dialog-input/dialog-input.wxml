<view class="container">
  <!-- 聊天消息显示区域 -->
  <scroll-view class="message-container" scroll-y="true" scroll-into-view="{{scrollIntoView}}">
    <view class="message" wx:for="{{conversations}}" wx:key="index">
      <view class="message-content-self" wx:if="{{item.role === 'user'}}">
        <text class="self-item">{{item.content}}</text>
      </view>
      <view class="message-content" wx:else>
        <text class="other-item">武小理：{{item.content}}</text>
      </view>
      <view class="blank"></view>
    </view>
  </scroll-view>

  <!-- 输入框 -->
  <view class="container-input">
    <!-- 输入框包含按钮和图片 -->
    <view class="input-container">
      <image class="input-image" src="http://pic.funworld.cc/pic/Group 12.svg"></image>      
      <input class="input-box" placeholder="向我提问吧~" bindinput="handleInput" value="{{inputMessage}}"/>
      <button class="input-button" bindtap="handleSend">
        发送
      </button>
    </view>
  </view>
</view>