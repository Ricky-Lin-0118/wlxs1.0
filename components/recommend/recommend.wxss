.container {
  display: flex;
  flex-direction: column;
}

.post-container {
  border-bottom: 15rpx solid rgba(204, 204, 204, 0.301); /* 分割线 */
  
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.info {
  margin-left: 10rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  margin-left: 8rpx;
}

.time {
  font-size: 18rpx;
  color: rgb(179, 178, 178);
  margin-left: 10rpx;
  
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-bottom: 30rpx;
  /* background-image: url('../../image/delete-icon.png'); */
}

.post-content {
  padding: 0rpx 10rpx 0rpx;
}

.image-container {
  display: flex;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.image-List {
  height: 190rpx;
  width: 240rpx;
}

.content-image {
  height: 180rpx;
  width: 240rpx; /* 设置图片高度为框上下间距的一半 */
  border-radius: 20rpx;
  
}

.title {
  font-size: 40rpx;
  font-weight: 540;
  color: #333;
  margin-bottom: 20rpx; /* 增加标题和内容的间距 */
}

.content {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  line-height: 1.3;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 10rpx 10rpx;
  margin-bottom: 20rpx;
}

.footer-top {
  display: flex;
}

.footer-bottom {
  display: flex;
  align-items: center;
}

.actions {
  display: flex;
  align-items: center;
}

.like-icon,
.comment-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.like-count,
.comment-count {
  font-size: 20rpx;
  color: #999;
  margin-right: 10rpx;
}

.tag {
  font-size: 25rpx;
  color: rgb(128, 126, 126);
  margin-right: 10rpx;
  background-color: rgba(44, 155, 219, 0.205);
  border-radius: 10rpx;
  padding: 6rpx;
}

.viewers {
  font-size: 25rpx;
  color: rgba(153, 153, 153, 0.521);
  margin-left: 6rpx;
  margin-top: 4rpx;
}