/* components/search/search.wxss */

/* 搜索 */
.search-container {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.search-input {
  flex: 7;
  height: 80rpx;
  padding: 0 80rpx 0 18rpx;
  border: 2rpx solid #ccc;
  border-radius: 36rpx;
  margin-right: 18rpx;
}
.search-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 10rpx;
  background-color: transparent; /* 设置背景色为透明 */
  color: rgb(145, 141, 141);
  border: none; /* 取消边框 */
  border-radius: 10rpx;
  cursor: pointer;
}