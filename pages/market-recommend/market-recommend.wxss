.container-recommend {
  border-bottom: 10rpx solid rgba(204, 204, 204, 0.301); /* 分割线 */
  padding-bottom: 40rpx;
}
image {
  width: 100%;
  height: 600rpx; 
}
.title {
  padding-left: 25rpx;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
.content {
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.content-content {
  font-size: 30rpx;
  font-weight: 400;
}
.title-content {
  font-size: 40rpx;
  font-weight: 600;
}
.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.tag {
  display: flex;
  margin-left: 25rpx;
  background-color: #F9F9F9;
  border-radius: 25rpx;
}
.tag-content {
  color: #A3A3A3;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.time {
  display: flex;
  color: #A3A3A3;
  font-size: 32rpx;
  font-weight: 400;
  margin-right: 20rpx;
}

.new-commit {
  border-bottom: 10rpx solid rgba(204, 204, 204, 0.301); /* 分割线 */
}
.container-newest {
  padding: 40rpx 30rpx;
}
.newest {
  font-size: 40rpx;
  font-weight: 500;
}
.commit {
  display: flex;
}
.avatar-area {
  padding-left: 30rpx;
  padding-right: 20rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx; /* 设置头像为圆形 */
}
.like-icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}
.main-commit {
  display: flex;
} 
.time-small {
  color: #A3A3A3;
  font-size: 25rpx;
}
.more-release{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.info-area {
  padding-bottom: 15rpx;
}
.name {
  color: #A3A3A3;
  font-size: 25rpx;
}
.intro{
  font-size: 28rpx;
}
.counter{
  color: #A3A3A3;
  font-size: 22rpx;
}
.sub-avatar-area{
  padding-right: 20rpx;
}
.sub-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50rpx;
}
.sub-commit {
  display: flex;
} 
.sub-commit {
  display: flex;
}


.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.release-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.release-avatar-image {
  width: 100%;
  height: 100%;
}

.release-info {
  margin-left: 10rpx;
}

.release-name {
  font-size: 30rpx;
  color: #333;
  margin-left: 8rpx;
}

.release-time {
  font-size: 18rpx;
  color: rgb(179, 178, 178);
  margin-left: 10rpx;
  
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  margin-bottom: 30rpx;
  /* background-image: url('../../image/delete-icon.png'); */
}

.post-content {
  padding: 0rpx 10rpx 0rpx;
}

.image-container {
  display: flex;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.more-commie{
  display: flex;
  justify-content: center;
  padding: 30rpx;
}
.more-commie-all{
  color: rgb(179, 178, 178);
  font-size: 25rpx;
}
.release-title {
  font-size: 40rpx;
  font-weight: 500;
  padding: 40rpx 30rpx;
}

